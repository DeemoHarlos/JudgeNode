<div class="header">
	<h1 class='article-title'><%= __('Manage Problem Set') %></h1>
    <h2>Administrator</h2>
</div>
<div class="content">
	<%- include('../_partial/widget/nav')%>
	<div class="pure-g">
		<div class="pure-u-1-3">
			<a class="pure-button pure-button-primary" class="pure-u-1-1" href="/admin/new/problem">+ <%= __('New Problem') %></a>
		</div>
	</div>

	<table class="pure-table pure-table-bordered" style="width: 100%">
		<thead>
		    <tr>
				<th></th>
				<th>#</th>
				<th><%= __('Problem Title') %></th>
				<th><%= __('Options') %></th>
			</tr>
		</thead>
		<tbody>
			<% for (var row in prob_list) { %>
			<tr class='<%- row%2 == 0 ? "pure-table-odd" : "" %>'>
				<% var prob = prob_list[row]; %>
				<td>
					<% if (prob.pub == 1) { %>
						<i class="fa fa-eye"></i>
					<% } else { %>
						<i class="fa fa-eye-slash"></i>
					<% } %>
				</td>
				<td><%- prob.pid %></td>
				<td><a href="/problem/0/<%- prob.pid%>"><%- prob.ttl %></a></td>
				<td>
				<span>
					<a class="" href="/admin/edit/problem/<%- prob.pid%>"><i class="fa fa-cog"></i></a>
				</span> | 
				<span>
					<a class="pid-rejudge" href="#"><i class="fa fa-refresh"></i></a>
				</span> |
				<span>
					<a class="pid-delete" href="#"><i class="fa fa-trash"></i></a>
				</span>
				</td>
			</tr>
			<% } %>
		</tbody>
	</table>
</div>

<script>
var list = document.getElementsByClassName("pid-rejudge");

for (var i = 0; i < list.length; i++) {
	list[i].addEventListener("click", 
        function (event) {
            event.preventDefault();
            if (confirm('Are you sure ? Rejuge maybe need a lot of time.')) {
                window.location = this.href;
            }
        }, 
        false);
}

list = document.getElementsByClassName("pid-delete");

for (var i = 0; i < list.length; i++) {
	list[i].addEventListener("click", 
        function (event) {
            event.preventDefault();
            if (confirm('Are you sure ? Delete problem.')) {
                window.location = this.href;
            }
        }, 
        false);
}
</script>	
