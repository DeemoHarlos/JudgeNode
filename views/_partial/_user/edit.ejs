<div class="header">
	<h1 class='article-title'>Edit Profile</h1>
	<h2>Update your profile so friends can find you.</h2>
</div>
<div class="content">

<% if (sysmsg.length > 0) { %>
<h2><div class='sysmsg'><%- sysmsg %></div></h2>
<% } %>

<form action="edit" method="post" class="pure-form  pure-form-aligned">
    <fieldset>
        <legend>Profile</legend>

        <div class="pure-control-group">
			<label for="lgn"><%= __('Username') %></label>
			<input class="pure-input-2-3" type="text" name="lgn" id="lgn" style="opacity: 0.5;" value="<%-  userinfo.info.lgn %>" disabled/>
		</div>

		<div class="pure-control-group">
			<label for="pwd"><%= __('New Password') %></label>
			<input class="pure-input-2-3" type="password" name="pwd" id="pwd" />
		</div>

		<div class="pure-control-group">
			<label for="repwd"><%= __('Retype New Password') %></label>
			<input class="pure-input-2-3" type="password" name="repwd" id="repwd" />
		</div>

		<div class="pure-control-group">
			<label for"motto><%= __('Motto') %></label>
			<textarea class="pure-input-2-3" name="motto" id="motto"><%- userinfo.info.motto %></textarea>
		</div>

		<div class="pure-controls">
        	<button type="submit" name="submit" id="submit" class="pure-button pure-button-primary"><%= __('Submit') %></button>
        </div>
    </fieldset>
</form>

<form action="/user/upload/avatar" method="post" class="pure-form pure-form-stacked" enctype="multipart/form-data">
    <fieldset>
        <legend>Avatar</legend>
		<div class="pure-g">
            <div class="pure-u-1 pure-u-md-11-24">
				<img class="pure-u-1-1" src="/images/avatar/thumb--<%= user['uid'] %>" onerror="this.src='http://i.imgur.com/mV053DI.png'"/>
			</div>
			<div class="pure-u-1 pure-u-md-1-24">
			</div>
			<div class="pure-u-1 pure-u-md-11-24">
				<label for="avatar">Select Image File</label>
				<input class="pure-input-2-3" name="avatar" type="file" accept="application/x-zip-compressed,image/*">
				<button type="submit" name="submit" class="pure-button pure-button-primary"><%= __('Upload Avatar') %></button>
			</div>
		</div>
    </fieldset>
</form>

</div>
